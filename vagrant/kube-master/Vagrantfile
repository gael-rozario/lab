# -*- mode: ruby -*-
# vi: set ft=ruby :

BRIDGE_MAC = "52:54:00:ca:19:03"
BRIDGE_IP  = "192.168.0.172"

Vagrant.configure("2") do |config|
  config.vm.define "kube-master" do |master|
    master.vm.box = "talos-linux"
    master.vm.hostname = "kube-master"
    master.vm.communicator = "none"

    # Bridge network on host's br0 — static DHCP reservation for BRIDGE_MAC → BRIDGE_IP
    master.vm.network "public_network",
      dev: "br0",
      mode: "bridge",
      type: "bridge",
      mac: BRIDGE_MAC

    master.vm.synced_folder ".", "/vagrant", disabled: true

    master.vm.provider "libvirt" do |lv|
      lv.memory = 4096
      lv.cpus = 2
      lv.machine_virtual_size = 200
    end
  end
end
