# -*- mode: ruby -*-
# vi: set ft=ruby :

BRIDGE_MAC = "52:54:00:ca:19:03"

Vagrant.configure("2") do |config|
  config.vm.define "kube-master" do |master|
    master.vm.box = "debian/bookworm64"
    master.vm.hostname = "kube-master"

    # Bridge network on host's br0 (DHCP) â€” k3s API server will bind to this IP
    master.vm.network "public_network",
      dev: "br0",
      mode: "bridge",
      type: "bridge",
      mac: BRIDGE_MAC

    master.vm.synced_folder ".", "/vagrant", disabled: true

    master.vm.provider "libvirt" do |lv|
      lv.memory = 4096
      lv.cpus = 2
      lv.machine_virtual_size = 200
    end

    master.vm.provision "shell", env: { "BRIDGE_MAC" => BRIDGE_MAC }, inline: <<-SHELL
      apt-get update -qq
      apt-get install -y curl

      # Detect the bridge NIC by MAC address (interface name varies by distro/driver)
      BRIDGE_IFACE=$(ip link | grep -B1 "$BRIDGE_MAC" | head -1 | awk -F: '{print $2}' | tr -d ' ')

      # Wait for DHCP lease; request one if not yet assigned
      for i in $(seq 1 30); do
        BRIDGE_IP=$(ip -4 addr show "$BRIDGE_IFACE" | awk '/inet / {print $2}' | cut -d/ -f1)
        [ -n "$BRIDGE_IP" ] && break
        echo "Waiting for DHCP on $BRIDGE_IFACE... ($i/30)"
        [ "$i" = "5" ] && dhclient "$BRIDGE_IFACE"
        sleep 2
      done

      echo "Bridge interface: $BRIDGE_IFACE, IP: $BRIDGE_IP"
      [ -z "$BRIDGE_IP" ] && echo "ERROR: no IP on $BRIDGE_IFACE" && exit 1

      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="server \
        --node-ip=$BRIDGE_IP \
        --advertise-address=$BRIDGE_IP \
        --tls-san=$BRIDGE_IP" sh -
    SHELL
  end
end
